<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wkivi.unipeimc.MainActivity">


    <TextView
        android:id="@+id/textViewPeso"
        android:layout_width="96dp"
        android:layout_height="43dp"
        android:layout_above="@+id/editTextPeso"
        android:layout_alignLeft="@+id/editTextPeso"
        android:layout_alignStart="@+id/editTextPeso"
        android:text="PESO:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextAltura"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPeso"
        android:layout_alignBottom="@+id/editTextPeso"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="185dp"
        android:text="CALCULAR"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPeso"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCalcular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewAltura"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_above="@+id/editTextAltura"
        android:layout_alignLeft="@+id/editTextAltura"
        android:layout_alignStart="@+id/editTextAltura"
        android:text="ALTURA:"
        android:textSize="24sp" />

</RelativeLayout>
